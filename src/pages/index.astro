---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import { Image } from "astro:assets";
import HeadshotImage from "../images/luke-climenhage.webp";
import { getEntry } from "astro:content";

// Load content from markdown file
const homeContent = await getEntry("pages", "home");
const content = homeContent.data;
---

<DefaultLayout title="Home - Luke Climenhage">
  <main class="min-h-screen relative z-10">
    <!-- Hero Section -->
    <section class="max-w-4xl mx-auto px-6 py-20">
      <div class="flex flex-col items-center gap-8">
        <!-- Profile Image -->
        <div class="flex-shrink-0">
          <Image
            src={HeadshotImage}
            alt={content.hero.imageAlt}
            class="w-48 h-48 rounded-full object-cover border-4 border-white/20"
          />
        </div>

        <!-- Hero Text -->
        <div class="text-center">
          <h1 class="text-5xl font-bold text-white mb-2">
            {content.hero.name}
          </h1>
          <h2 class="text-2xl text-gray-200 mb-6">
            {content.hero.title}
          </h2>
          <p class="text-gray-300 text-lg leading-relaxed mb-6">
            {content.hero.description}
          </p>
          <p class="text-green-400 font-semibold text-xl">
            {content.hero.tagline}
          </p>
        </div>
      </div>
    </section>
    <!-- Footer -->
    <footer class="max-w-4xl mx-auto px-6 py-12 text-center">
      <p class="text-gray-400">
        Â© {new Date().getFullYear()}, Luke Climenhage - All rights reserved.
      </p>
    </footer>
  </main>
</DefaultLayout>
